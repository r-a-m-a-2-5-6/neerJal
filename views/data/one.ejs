<section class="section-1" >
    
    <% if ( user.role=="Surveyer"){ %>
    <!-- Surveyor Name -->
    <div class="mb-1">
        <label class="form-label" for="surveyor-name">a&#41; Surveyor Name:</label>
        <input type="text" class="form-control" name="data[surveyorName]" value="<%=user.username %>" id="surveyor-name" readonly placeholder="Enter Surveyor Name" required>
    </div>
    <div class="mb-1">
        <label class="form-label" for="respondent-name">b&#41; Respondent Name (Voluntary):</label>
        <input type="text" class="form-control" name="data[respondentName]" id="respondent-name" placeholder="Enter Respondent Name">
    </div>
    <% } %>
    <% if(user.role =="Volunteer"){ %>
    <!-- Respondent Name (Voluntary) -->
    <div class="mb-1">
        <label class="form-label" for="respondent-name">b&#41; Respondent Name (Voluntary):</label>
        <input type="text" class="form-control" name="data[respondentName]" value="<%=user.username  %>" readonly id="respondent-name" placeholder="Enter Respondent Name">
    </div>
    <% } %>
    <!-- Village/Town -->
    <div class="mb-1">
        <label class="form-label" for="village-town">c&#41; Village/Town:</label>
        <input type="text" class="form-control" name="data[villageTown]" id="village-town" placeholder="Enter Village or Town" required>
    </div>
    
    <!-- Occupation -->
    <div class="mb-1">
        <label class="form-label" for="occupation">d&#41; Occupation:</label>
        <input type="text" class="form-control" name="data[occupation]" id="occupation" placeholder="Enter Occupation" required>
    </div>
    
    <!-- Gender -->
    <div class="mb-1">
        <label class="form-label" for="gender">e&#41; Gender:</label>
        <select class="form-control" name="data[gender]" id="gender" required>
        <option value="">Select Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
        </select>
    </div>
    
    <!-- Age -->
    <div class="mb-1">
        <label class="form-label" for="age">f&#41; Age:</label>
        <input type="number" class="form-control" name="data[age]" id="age" placeholder="Enter Age" min="0" max="120" required>
    </div>
     <!-- Location -->
     <div class="mb-1" style="display: none;">
        <label class="form-label" for="location">Location:</label>
        <input type="text" class="form-control" name="data[location]" id="location" readonly required>
    </div>
    
    <!-- Educational Qualification -->
    <div class="mb-1">
        <label class="form-label" for="qualification">g&#41; Educational Qualification:</label>
        <input type="text" class="form-control" name="data[qualification]" id="qualification" placeholder="Enter Qualification" required>
    </div>
    
    <!-- Employment -->
    <div class="mb-1">
        <label class="form-label" for="employment" >h&#41; Employment Status:</label>
        <select class="form-control" name="data[employment]" id="employment" required>
        <option value="">Select Employment Status</option>
        <option value="Employed">Employed</option>
        <option value="Unemployed">Unemployed</option>
        <option value="Self-employed">Self-employed</option>
        <option value="Student">Student</option>
        <option value="Other">Other</option>
        </select>
    </div>
      
</section>