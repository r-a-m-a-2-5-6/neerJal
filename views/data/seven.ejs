<section class="section-7-wastewater-management">
    <!-- Drainage System -->
    <div class="mb-3">
        <label class="form-label">Is there a proper drainage system in your locality?</label><br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="drainageSystem" value="Yes" id="drainage-yes" onclick="toggleVisibility('sacredSitesDetail', true)" data-bs-toggle="collapse" data-bs-target="#drainageMaintenance">
            <label class="form-check-label" for="drainage-yes">Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="drainageSystem" value="No" id="drainage-no" onclick="toggleVisibility('sacredSitesDetail', false)" data-bs-toggle="collapse" data-bs-target="#drainageMaintenance" aria-expanded="false">
            <label class="form-check-label" for="drainage-no">No</label>
        </div>
    </div>
    <div class="collapse" id="drainageMaintenance">
        <div class="mb-3">
            <label class="form-label">If yes, is it well-maintained?</label><br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="maintenance" value="Yes" id="maintenance-yes">
                <label class="form-check-label" for="maintenance-yes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="maintenance" value="No" id="maintenance-no">
                <label class="form-check-label" for="maintenance-no">No</label>
            </div>
        </div>
    </div>

    <!-- Household Wastewater Disposal -->
    <div class="mb-3">
        <label class="form-label">Where does household wastewater usually go?</label><br>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="wastewaterDisposal" value="Sewer system" id="sewer-system">
            <label class="form-check-label" for="sewer-system">Sewer system</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="wastewaterDisposal" value="Open drains" id="open-drains">
            <label class="form-check-label" for="open-drains">Open drains</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="wastewaterDisposal" value="Septic tanks" id="septic-tanks">
            <label class="form-check-label" for="septic-tanks">Septic tanks</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="wastewaterDisposal" value="Directly into the river" id="direct-river">
            <label class="form-check-label" for="direct-river">Directly into the river</label>
        </div>
    </div>

    <!-- Untreated Sewage Discharge -->
    <div class="mb-3">
        <label class="form-label">Have you noticed untreated sewage or industrial wastewater being discharged into the river?</label><br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="sewageDischarge" value="Yes" id="sewage-yes" onclick="toggleVisibility('sacredDetail', true)" data-bs-toggle="collapse" data-bs-target="#dischargeLocation">
            <label class="form-check-label" for="sewage-yes">Yes</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="sewageDischarge" value="No" id="sewage-no" onclick="toggleVisibility('sacredDetail', false)" data-bs-toggle="collapse" data-bs-target="#dischargeLocation" aria-expanded="false">
            <label class="form-check-label" for="sewage-no">No</label>
        </div>
    </div>
    <div class="collapse" id="dischargeLocation">
        <div class="mb-3">
            <label class="form-label" for="discharge-location">If yes, specify locations or sources:</label>
            <textarea class="form-control" id="discharge-location" name="dischargeLocations" rows="3" placeholder="Mention locations or sources"></textarea>
        </div>
    </div>

</section>
