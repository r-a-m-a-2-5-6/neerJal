<section class="sectiom-3">
    <!-- Drinking Water Usage -->
    <div class="mb-3">
      <label class="form-label">Do you use river water for drinking?</label><br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][riverDrinking]" id="drink-yes" value="Yes" onclick="toggleVisibility('drinkRemark', true)">
        <label class="form-check-label" for="drink-yes">Yes</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][riverDrinking]" id="drink-no" value="No" onclick="toggleVisibility('drinkRemark', false)">
        <label class="form-check-label" for="drink-no">No</label>
      </div>
    </div>
    <div class="mb-3" id="drinkRemark" style="display: none;">
      <label class="form-label" for="drink-treatment">If yes, do you filter/treat it? If yes, how?</label>
      <input type="text" class="form-control" name="data[waterUsage][drinkTreatment]" id="drink-treatment" placeholder="Describe treatment method">
    </div>
  
    <!-- Domestic Water Usage -->
    <div class="mb-3">
      <label class="form-label">Do you use river water for domestic purposes?</label><br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][domesticUse]" id="domestic-yes" value="Yes" onclick="toggleVisibility('domesticPurpose', true)">
        <label class="form-check-label" for="domestic-yes">Yes</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][domesticUse]" id="domestic-no" value="No" onclick="toggleVisibility('domesticPurpose', false)">
        <label class="form-check-label" for="domestic-no">No</label>
      </div>
    </div>
    <div class="mb-3" id="domesticPurpose" style="display: none;">
      <label class="form-label" for="domestic-purpose">Specify purpose:</label>
      <input type="text" class="form-control" name="data[waterUsage][domesticPurpose]" id="domestic-purpose" placeholder="Specify purpose">
    </div>
  
    <!-- Irrigation -->
    <div class="mb-3">
      <label class="form-label">Do you use river water for irrigation?</label><br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][irrigation]" id="irrigation-yes" value="Yes" onclick="toggleVisibility('cropImpact', true)">
        <label class="form-check-label" for="irrigation-yes">Yes</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][irrigation]" id="irrigation-no" value="No" onclick="toggleVisibility('cropImpact', false)">
        <label class="form-check-label" for="irrigation-no">No</label>
      </div>
    </div>
    <div class="mb-3" id="cropImpact" style="display: none;">
      <label class="form-label" for="crop-impact">If yes, have there been any impacts on crop yield?</label>
      <input type="text" class="form-control" name="data[waterUsage][cropImpact]" id="crop-impact" placeholder="Describe crop impact">
    </div>
  
    <!-- Water Quality Changes -->
    <div class="mb-3">
      <label class="form-label">Have you noticed any changes in water quality over the past 5-10 years?</label><br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][waterQualityChange]" id="quality-yes" value="Yes" onclick="toggleVisibility('qualityRemark', true)">
        <label class="form-check-label" for="quality-yes">Yes</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][waterQualityChange]" id="quality-no" value="No" onclick="toggleVisibility('qualityRemark', false)">
        <label class="form-check-label" for="quality-no">No</label>
      </div>
    </div>
    <div class="mb-3" id="qualityRemark" style="display: none;">
      <label class="form-label" for="quality-change-description">If yes, describe:</label>
      <textarea class="form-control" name="data[waterUsage][qualityChangeDescription]" id="quality-change-description" rows="3" placeholder="Describe changes"></textarea>
    </div>
  
    <!-- Seasonal Changes -->
    <div class="mb-3">
      <label class="form-label">Does the water smell or look different in different seasons?</label><br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][seasonalChange]" id="seasonal-yes" value="Yes" onclick="toggleVisibility('seasonalRemark', true)">
        <label class="form-check-label" for="seasonal-yes">Yes</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="data[waterUsage][seasonalChange]" id="seasonal-no" value="No" onclick="toggleVisibility('seasonalRemark', false)">
        <label class="form-check-label" for="seasonal-no">No</label>
      </div>
    </div>
    <div class="mb-3" id="seasonalRemark" style="display: none;">
      <label class="form-label" for="season-description">If yes, in which season?</label>
      <input type="text" class="form-control" name="data[waterUsage][seasonDescription]" id="season-description" placeholder="Specify season">
    </div>
</section>